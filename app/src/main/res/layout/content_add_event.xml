<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.amakenapp.website.amakenapp.activities.AddEvent"
    tools:showIn="@layout/activity_add_event">
    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <android.support.design.widget.TextInputLayout
                android:id="@+id/EnterEvent_ame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="32dp">


                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/EnterEventName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_event_name"
                    android:inputType="text"
                    android:textSize="@dimen/FontSize"
                    android:textColor="#15AFD8"
                    android:textColorHint="#15AFD8"
                    android:textColorLink="#15AFD8" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Description_Event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="32dp">


                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/DescriptionEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/description_the_event"
                    android:inputType="text"
                    android:textSize="@dimen/FontSize"
                    android:textColor="#15AFD8"
                    android:textColorHint="#15AFD8"
                    android:textColorLink="#15AFD8" />

            </android.support.design.widget.TextInputLayout>




            <TextView
                android:text="@string/event_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_below="@+id/editText3"
                android:layout_alignStart="@+id/editText3"
                android:paddingBottom="20dp"
                android:layout_marginStart="10dp"
                android:textSize="@dimen/FontSize"
                android:textColor="#A47A51"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="30dp"/>
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:background="#15AFD8"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="3dp"
                android:paddingBottom="4dp"/>

            <TextView
                android:text="@string/event_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/textView"
                android:paddingBottom="2dp"
                android:layout_marginStart="10dp"
                android:paddingStart="3dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="30dp"
                android:textSize="@dimen/FontSize"
                android:textColor="#A47A51" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/cam"
                android:id="@+id/btn_choose_image"
                android:layout_marginStart="15dp" />
            <TextView
                android:text="@string/event_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewm"
                android:layout_below="@+id/editText3"
                android:layout_alignStart="@+id/editText3"
                android:paddingBottom="10dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                android:textSize="@dimen/FontSize"
                android:textColor="#A47A51" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/editDate"
                android:hint="D/M/Y" />

           <TextView
            android:id="@+id/textViewc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="30dp"
            android:text="@string/event_category"
               android:textSize="@dimen/FontSize"
            android:textColor="@color/baa" />


            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="29dp"
                android:layout_marginTop="15dp"
                android:popupBackground="@android:color/white"
                android:spinnerMode="dropdown"
                android:background="@android:drawable/btn_dropdown"/>
            <TextView
                android:text="@string/event_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textColor="#A47A51"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:paddingLeft="10dp" />

            />
            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="29dp"
                android:background="@android:drawable/btn_dropdown"

                />

            <TextView
                android:text="@string/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textColor="#A47A51"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:paddingLeft="10dp" />
            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="29dp"
                android:layout_marginTop="15dp"
                android:background="@android:drawable/btn_dropdown"

                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/dane_butto"
                android:id="@+id/imageButton2"
                android:background="#00ffffff"
                android:layout_marginStart="250dp"
                android:layout_marginTop="76dp" />


        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
